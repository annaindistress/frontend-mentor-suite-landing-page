.button
    display inline-block
    font-weight 700
    text-align center
    text-transform capitalize
    text-decoration none
    border-radius 6px

    &--primary
        padding 15px 32px 14px
        font-size 18px
        line-height @font-size + 14px
        letter-spacing -.18px
        color color-white
        background-color color-blue

        &:hover,
        &:focus
            background-image linear-gradient(135deg, color-violet 0%, color-pink 49.21%, color-orange 100%)

    &--secondary
        padding 12px 15px 10px
        font-size 14px
        line-height @font-size + 10px
        letter-spacing -.14px
        color color-blue
        border 1px solid currentColor

        &:hover,
        &:focus
            color color-white
            background-color color-blue
