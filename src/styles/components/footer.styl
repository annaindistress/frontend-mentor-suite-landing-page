.footer
    padding 56px 24px 80px
    background-color color-beige

    &__container
        display flex
        flex-wrap nowrap
        flex-direction column
        align-items center

    &__link
        width 81px
        margin-bottom 32px

    &__logo
        display block
        width 100%
        height auto

    &__copyright
        margin 0 0 32px
        font-size 15px
        line-height @font-size + 17px
        letter-spacing .08px
        text-align center

@media (min-width: 768px)
    .footer
        padding 72px 40px

        &__container
            flex-direction row
            justify-content space-between

        &__link
            margin-bottom 0

        &__copyright
            margin-bottom 0
