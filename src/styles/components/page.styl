.page
    display flex
    flex-wrap nowrap
    flex-direction column
    min-width 375px
    min-height 100vh
    margin 0
    padding 0
    font-family 'Epilogue', sans-serif
    font-weight 400
    font-size 16px
    line-height @font-size + 12px
    letter-spacing .09px
    color color-grey
    background-color color-white

    &__main
        display flex
        flex-wrap nowrap
        flex-direction column
        flex-grow 1

    &__section:last-of-type
        flex-grow 1
